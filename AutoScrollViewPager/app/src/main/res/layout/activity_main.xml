<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_free_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginHorizontal="8dp"
            android:textColor="@android:color/black"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_become_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/app_name"/>
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:layerType="software"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTermCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="32dp"
        android:letterSpacing="0.05"
        android:text="terms and condition"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        tools:ignore="UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_btn"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:padding="8dp"
        android:background="@android:drawable/btn_default_small"
        android:text="Log In"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:text="Above login text"
        android:textColor="@android:color/white"
        android:textSize="12sp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        app:tabBackground="@android:drawable/list_selector_background"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"/>

    <project.android_projects.com.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>