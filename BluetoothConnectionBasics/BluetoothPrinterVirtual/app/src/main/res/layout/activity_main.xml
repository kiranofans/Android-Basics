<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linearVertical"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/displayTxt"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>
        <TextView
            android:textSize="18dp"
            android:textAlignment="center"
            android:id="@+id/printerNameTV"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Printer Name"/>
        <TextView
            android:id="@+id/labelTv"
            android:text="label..."
            android:textSize="18dp"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
         <sunmi.sunmiui.edit.Edit
             android:layout_gravity="center_horizontal"
             android:id="@+id/usrNameInput"
             android:layout_margin="8dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

         </sunmi.sunmiui.edit.Edit>
        <Button
            android:id="@+id/searchBtn"
            android:text="Search Device"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/connectBtn"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect Printer"/>
        <Button
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/printBtn"
            android:text="Print"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/disconnectBtn"
            android:text="Disconnect Printer"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>